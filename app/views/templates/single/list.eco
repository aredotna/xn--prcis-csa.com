<% if @prev or @next: %>
  <nav>
    <% if @prev: %>
      <a href="/#/<%= @channel.slug %>/show:<%= @prev.id %>">Previous</a>
    <% end %>
    <% if @channel.mode: %>
      <a href="/#/<%= @channel.slug %>/mode:<%= @channel.mode %>">Up</a>
    <% else: %>
      <a href="/#/<%= @channel.slug %>">Up</a>
    <% end %>
    <% if @next: %>
      <a href="/#/<%= @channel.slug %>/show:<%= @next.id %>">Next</a>
    <% end %>
  </nav>
<% end %>

<div id="block_<%= @block.id %>" class="full <%= @block.block_type.toLowerCase() %>" data-type="<%= @block.block_type %>">
    <h3 class="title">
      <a href="/#/<%= @channel.slug %>/show:<%= @block.id %>">Â¶</a>
      <% if @block.title: %>
        <span class="meta-sep">|</span>
        <a href="/#/<%= @channel.slug %>/show:<%= @block.id %>">
          <%= @block.title %>
        </a>
      <% end %>
    </h3>

  <% if @block.block_type is 'Media': %>
    <!-- MEDIA -->
    <div class="embed">
      <% if @block.embed_html: %>
        <%- @block.embed_html %>
      <% else: %>
        <a href="<%= @block.embed_source_url %>" class="url external">
          <%= @block.embed_source_url %>
        </a>
      <% end %>
    </div>

  <% else if @block.block_type is 'Image': %>
    <!-- IMAGE -->
    <a href="<%= @block.image_original %>" class="enlarge">
      <img src="<%= @block.image_display %>" alt="<%= @block.title %>" />
    </a>

  <% else if @block.block_type is 'Link': %>
    <!-- LINK -->
    <% if @block.image_display: %>
      <a href="<%= @block.source_url %>" class="external" target="_blank">
        <img src="<%= @block.image_display %>" alt="<%= @block.title %>" />
      </a>
    <% else: %>
      <p>
        <a href="<%= @block.source_url %>" class="external url" target="_blank"><%= @block.source_url %></a>
      </p>
    <% end %>

  <% else if @block.block_type is 'Text': %>
    <!-- TEXT -->
    <div class="content">
      <%- @block.content %>
    </div>
  <% end %>


  <div class="metadata">
    <% if @block.description: %>
      <div class="description">
        <%- @block.description %>
      </div>
    <% end %>
  </div>
  
</div><!-- #block -->