<% if @block.image_thumb: %>
  <a href="/#/<%= @channel.slug %>/show:<%= @block.id %>">
    <img src="http://d2ss1gpcas6f9e.cloudfront.net/?thumb=250x250%23&src=<%= @block.image_original %>" alt="<%= @block.title %>" alt="<%= @block.title %>" />
  </a>
<% else if @block.title: %>
  <a href="/#/<%= @channel.slug %>/show:<%= @block.id %>">
    <%= _.str.prune(@block.title, 20) %>
  </a>
<% else: %>
  <a href="/#/<%= @channel.slug %>/show:<%= @block.id %>">
    Untitled
  </a>
<% end %>
